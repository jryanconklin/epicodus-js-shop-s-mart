<h2 class="text-center">Details</h2>

  <div class="well">
    <div class="row">

      <div class="col-sm-6">
        <img class="img-responsive" src={{model.img}} alt={{model.description}} />
      </div>

      <div class="col-sm-6">
        <h3>{{model.name}}</h3>
        <h5>{{model.price}}</h5>
        <p>{{model.description}}</p>
        <button class="btn btn-default btn-xs" {{action 'addToCart' model}}>Buy</button>
      </div>

    </div> <!-- Well  -->
  </div> <!-- Row -->
